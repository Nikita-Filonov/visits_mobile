<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerStyle">@style/TimePicker.Theme</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimaryInverse">#202123</item>
        <item name="android:textColorPrimary">#777777</item>
        <item name="android:textColorSecondaryInverse">#202123</item>
        <item name="colorControlHighlight">#A1A1A1</item>
        <item name="colorControlActivated">#2979FF</item>
        <item name="android:textColorPrimary">#797979</item>
        <item name="android:calendarTextColor">#FFFFFF</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="TimePicker.Theme" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">#FFFFFF</item>
        <item name="android:numbersTextColor">#202123</item>
        <item name="android:numbersInnerTextColor">#838383</item>
        <item name="android:numbersSelectorColor">#2979FF</item>
        <item name="android:numbersBackgroundColor">#F3F3F3</item>
        <item name="android:amPmTextColor">#9c27b0</item>
        <item name="android:colorControlActivated">#FFFFFF</item>
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#201F24</item>
    </style>

</resources>

